
<div class="col-sm-12 col-lg-4 mb-3 px-3.5">
  <div id="diary-id-<%= diary.id %>">
    <div class="card w-96 bg-base-100 shadow-xl">
        <%= image_tag "diary_placeholder.png", class: "card-img-top", width: "100", height:"100" %>
        <div class="card-body">
            <div class="d-flex">
                <h2 class="card-title">
                    <%= link_to diary.title, '#' %>
                </h2>
                <div class='ms-auto'>
                    <%= link_to '#', id: 'button-edit-#{diary.id}' do %>
                        <i class="bi bi-pencil-fill"></i>
                    <% end %>
                    <%= link_to '#', id: 'button-delete-#{diary.id}', method: :delete, data: {confirm: '削除しますか'} do %>
                        <i class="bi bi-trash-fill"></i>
                    <% end %>
                </div>
                <div class="card-text">
                    <p><%= diary.body %></p>
                </div>
            </div>
            <ul class="list-inline">
                <li><i class="bi bi-person"></i><%= diary.user.name %></li>
                <li><i class="bi bi-calendar"></i><%= l diary.created_at, format: :short %></li>
            </ul>
        </div>
    </div>
  </div>
</div>
